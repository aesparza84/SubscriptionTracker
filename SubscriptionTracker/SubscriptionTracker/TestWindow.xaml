<Window x:Class="SubscriptionTracker.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubscriptionTracker"
        xmlns:userControls="clr-namespace:SubscriptionTracker.View.UserControls"       
        mc:Ignorable="d"
        Title="TestWindow" Height="400" Width="300">
    <Grid>
        <!--<userControls:MenuBar></userControls:MenuBar>-->

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <userControls:ClearableTextBox Grid.Row="1" Width="250" Height="50" PlaceHolder="Name"/>
        <userControls:ClearableTextBox Grid.Row="2" Width="250" Height="50" PlaceHolder="Price"/>
        <userControls:ClearableTextBox Grid.Row="3" Width="250" Height="50" PlaceHolder="Category"/>
        <userControls:ClearableTextBox Grid.Row="4" Width="250" Height="50" PlaceHolder="Renew Type"/>
        <userControls:ClearableTextBox Grid.Row="5" Width="250" Height="50" PlaceHolder="Renew Date"/>

    </Grid>
</Window>
